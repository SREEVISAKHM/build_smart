    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "build_smart",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "build_smart (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "build_smart (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        },
        {
            "name": "Flutter dev",
            "type": "dart",
            "request": "launch",
            "args": [
                "--dart-define=env=dev"
            ]
        },
        {
            "name": "Flutter prod",
            "type": "dart",
            "request": "launch",
            "args": [
                "--dart-define=env=prod"
            ],
        },
    
        {
            "name": "Release dev",
            "type": "dart",
            "request": "launch",
            "args": [
                "--release",
                "--dart-define=env=dev",
                "--dart-define=dev_tools_enabled=true"
            ],
        },
        {
            "name": "Release Prod",
            "type": "dart",
            "request": "launch",
            "args": [
                "--release",
                "--dart-define=env=prod",
            ],
        },
        {
            "name": "Debug dev",
            "type": "dart",
            "request": "launch",
            "args": [
                "--dart-define=env=dev",
                "--dart-define=dev_tools_enabled=true"
            ],
        },
        {
            "name": "Debug Prod",
            "type": "dart",
            "request": "launch",
            "args": [
                "--dart-define=env=prod",
            ],
        },
    ]
}